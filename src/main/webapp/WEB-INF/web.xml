<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<!-- config starts here -->
	<display-name>ServletContext_Config</display-name>
	<servlet>
		<servlet-name>ConfigWithXMl</servlet-name>
		<servlet-class>com.Servlet.config.ConfigWithWebXml</servlet-class>
		<init-param>
			<param-name>user</param-name>
			<param-value>root</param-value>
		</init-param>
		<init-param>
			<param-name>pass</param-name>
			<param-value>root</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ConfigWithXMl</servlet-name>
		<url-pattern>/configxml</url-pattern>
	</servlet-mapping>
	
  <!-- config ends here -->
  
  <!-- Context Start here -->
     <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:mysql://localhost/mydb</param-value>
     </context-param>
     
      <context-param>
        <param-name>sqlstring</param-name>
        <param-value>select * from user;</param-value>
     </context-param>
   <!-- Context Start here -->

</web-app>